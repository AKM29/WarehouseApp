<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.hillcrest_warehouse.MapActivity">

<com.mapbox.mapboxsdk.maps.MapView
    android:id="@+id/mapView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:mapbox_cameraTargetLat="-37.789000"
    app:mapbox_cameraTargetLng="175.3081200"
    app:mapbox_cameraZoom="18"


    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mapbox_compass_icon"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView24"
        app:srcCompat="@drawable/map"
        tools:ignore="ContentDescription" />

    <ZoomControls
        android:id="@+id/simpleZoomControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />
</com.mapbox.mapboxsdk.maps.MapView>
</RelativeLayout>
